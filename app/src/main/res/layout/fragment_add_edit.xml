<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.AddEditFragment">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike"
        android:text="@string/add_contact_title"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/firstInnerLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageContact"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_utente_default" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addImageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="80dp"
            android:clickable="true"
            android:minWidth="48dp"
            android:src="@android:drawable/ic_menu_add" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondInnerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelNameText"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato_regular"
                android:text="@string/name_text"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

            <EditText
                android:id="@+id/nameText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/name_hint"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/labelSurnameText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:text="@string/surname_text"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

            <EditText
                android:id="@+id/surnameText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/surname_hint"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/labelCellNumberText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:text="@string/cellular_number_text"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

            <EditText
                android:id="@+id/cellNumberText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/labelPhoneNumberText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:text="@string/home_number_text"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

            <EditText
                android:id="@+id/homeNumberText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/labelEmailText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:text="@string/email_text"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

            <EditText
                android:id="@+id/emailText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/my_custom_borders"/>

        </LinearLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/thirdInnerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="@string/add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:text="@string/indietro"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
